div(ng-controller="RestaurantController")
	div
		a(href="#!/restaurantes") Volver al listado
	form#restaurantEdit(ng-submit="save()")
		div
			div: label Nombre
			input(type="text",ng-model="restaurante.nombre")
		div
			div: label Teléfono
			input(ng-model="restaurante.telefono")
		div
			div: label Dirección
			textarea(ng-model="restaurante.direccion")
		div
			ul
				li(ng-repeat="dia in restaurante.horarios | orderBy: id ")
					div
						input(type="checkbox", value="{{$index}}", ng-checked="dia.checked==true", ng-change="updateHorario()", ng-model="restaurante.horarios[$index]['checked']", id="{{$index+dia.nombre}}")
						label(for="{{$index+dia.nombre}}") {{dia.nombre}}
					div(ng-show="dia.checked")
						div(id="horarios_{{$index}}")
							div(ng-repeat="horario in dia.horarios")
								label Apertura
								input.picker(type="text", name="", ng-timepicker, ng-model="dia.horarios[$index].apertura")
								label Cierre
								input.picker(type="text", name="", ng-timepicker, ng-model="dia.horarios[$index].cierre")
								a(href="javascript:void(0)" ng-click="removeHorario($parent.$index,$index)") Eliminar
						div
							button(ng-click="addHorario($index)", type="button") Agregar horario
		button(type="submit") Guardar